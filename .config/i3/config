# exit i3 (logs you out of your X session)
bindsym $mod+Shift+z exec "i3-nagbar -t warning -m 'Exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# hibernate system
bindsym $mod+Shift+p exec "i3-nagbar -t warning -m 'Hibernate system?' -B 'Yes, hibernate' 'systemctl hibernate'"

# lock
